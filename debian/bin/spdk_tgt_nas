#!/bin/bash
BIN="/usr/bin/spdk_tgt"
conf_file="/etc/spdk/spdk_tgt.conf"
cores="0x2"
hugemem="2048"
tgt="/var/tmp/spdk_tgt.sock"

if [ -f "$conf_file" ]; then
    source "$conf_file"
else
    mkdir -p /etc/spdk/
    echo "cores=$cores" >$conf_file
    echo "hugemem=$hugemem" >>$conf_file
    echo "tgt=$tgt" >>$conf_file
fi
$BIN -m $cores -s $hugemem -r  $tgt



